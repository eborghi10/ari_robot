<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="ari_end_effector" default="ari_hand"/>

    <include file="$(find ari_controller_configuration)/launch/joint_state_controller.launch"/>
    <include file="$(find ari_controller_configuration)/launch/default_controllers.launch"/>

    <group if="$(eval arg('ari_end_effector') == 'ari_hand')">
    	<rosparam command="load" file="$(find joint_state_controller)/hands-joint_trajectory_controllers.yaml" />
    	<include file="$(find ari_controller_configuration)/launch/hand_controllers.launch"/>
    </group>

    <!-- Motion planning -->
    <include file="$(find ari_moveit_config)/launch/move_group.launch"/>

</launch>

